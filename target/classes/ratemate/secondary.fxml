<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ratemate.SecondaryController" style="-fx-background-color: linear-gradient(to bottom, gray, lightblue);">
    <children>
        <Label text="Let's start by grabbing some information:" style="-fx-font-size: 40px; -fx-font-weight: bold;" />

        <!-- Title -->
        <Label text="Insurance Form" style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-underline: true;" />

        <!-- Gender Selection -->
        <HBox spacing="10">
            <Label text="Gender:" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <RadioButton text="Male" toggleGroup="$genderGroup" />
            <RadioButton text="Female" toggleGroup="$genderGroup" />
        </HBox>

        <!-- Age Input -->
        <HBox spacing="10">
            <Label text="Age:" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <TextField promptText="Enter your age" />
        </HBox>

         <!-- Vehcile Age Input -->
        <HBox spacing="10">
            <Label text="Vehicle Age:" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <TextField promptText="Enter age of vehicle in years" />
        </HBox>
        
        <!-- Past Vehicle Damage -->
        <HBox spacing="10">
            <Label text="Past Vehicle Damage:" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <CheckBox text="Yes" />
        </HBox>

        <!-- Previously Insured -->
        <HBox spacing="10">
            <Label text="Previously Insured:" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <CheckBox text="Yes" />
        </HBox>

        <!-- Current Annual Premium -->
        <HBox spacing="10">
            <Label text="Current Annual Premium ($):" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <TextField promptText="Enter amount" />
        </HBox>

        <!-- Submit Button -->
        <Button fx:id="submitButton" text="Submit" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    </children>

</VBox>
